---
import "../styles/global.css";
/* import logo1 from "../assets/khimera-logo-madre.svg" */
import logo1 from "../assets/khimera-logo-1.webp"

import Menu from "../assets/menu-hamburger.svg"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Khimera Studio, disign studio ">
    <meta name="keywords" content="Khimera Studio, design studio, web design, web development, web apps, ">
		<meta name="theme-color" content="#003366" />
    <meta name="apple-mobile-web-app-status-bar-style" content="#003366" />
		<meta name="color-scheme" content="light dark"> 
		<title>Khimera Studio</title>
	</head>
	<body> 
		<header>
			<div class="brandLogoContainer">
				<img class="brandLogo1" src={logo1.src} alt="brand logo, khimera design studio">
			</div>
			<nav id="navBar" >
				<div id="desktopMenu">
					<a href="#Intro" class="linkFontSizeBig" data-name="navLink">INTRO</a>
					<a href="#AboutUs" class="linkFontSizeBig" data-name="navLink">ABOUT US</a>
					<a href="#OurWork" class="linkFontSizeBig" data-name="navLink">OUR WORK</a>
					<a href="#OurServices" class="linkFontSizeBig" data-name="navLink">OUR SERVICES</a>
					<a href="#Contact" class="linkFontSizeBig" data-name="navLink" >CONTACT</a>
				</div>
				<div id="mobileMenuContainer">
					<img src={Menu.src} alt="mobile menu" id="hamburger">
					<div id="mobileMenu" class="mobileMenu mobileMenuHidden" >
						<a href="#"  class="linkFontSizeBig">HOME</a>
						<a href="#AboutUs" class="linkFontSizeBig" >ABOUT US</a>
						<a href="#OurWork" class="linkFontSizeBig" >OUR WORK</a>
						<a href="#OurServices" class="linkFontSizeBig">OUR SERVICES</a>
						<a href="#Contact" class="linkFontSizeBig" >
							CONTACT
						</a>
					</div>
				</div>
			</nav>

		</header>

		
		<slot />
	</body>
</html>

